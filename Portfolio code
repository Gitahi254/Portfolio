    <script>
        // JavaScript for active navigation link highlighting (optional, for visual feedback)
        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section');

            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.5 // Highlight when 50% of the section is visible
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            link.style.color = '#4a5568'; // Reset color
                            link.style.fontWeight = 'normal'; // Reset font weight
                            if (link.getAttribute('href') === '#' + entry.target.id) {
                                link.classList.add('active');
                                link.style.color = '#4f46e5'; // Active color
                                link.style.fontWeight = 'bold'; // Active font weight
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            // Handle initial load to set active link for the first section
            if (window.location.hash) {
                const initialTarget = document.querySelector(window.location.hash);
                if (initialTarget) {
                    const correspondingLink = document.querySelector(`.nav-link[href="${window.location.hash}"]`);
                    if (correspondingLink) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            link.style.color = '#4a5568';
                            link.style.fontWeight = 'normal';
                        });
                        correspondingLink.classList.add('active');
                        correspondingLink.style.color = '#4f46e5';
                        correspondingLink.style.fontWeight = 'bold';
                    }
                }
            } else {
                // If no hash, set Home as active
                const homeLink = document.querySelector('.nav-link[href="#home"]');
                if (homeLink) {
                    homeLink.classList.add('active');
                    homeLink.style.color = '#4f46e5';
                    homeLink.style.fontWeight = 'bold';
                }
            }
        });
    </script>
